<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" prefHeight="300" prefWidth="400"
            xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="ru.nsu.fit.konstantinov.view.fxml.MainMenuView">
    <VBox alignment="CENTER" layoutX="142.0" layoutY="90.0" maxWidth="Infinity" prefWidth="400" spacing="10.0"
          stylesheets="gameStyleSheet.css" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label alignment="TOP_CENTER" prefHeight="43.0" prefWidth="52.0" text="Menu" textAlignment="CENTER"/>
        <VBox alignment="CENTER" prefHeight="135.0" prefWidth="360.0">
            <Button fx:id="playButton" minWidth="200" mnemonicParsing="false" onAction="#handleStartButton"
                    text="Start"/>
            <Button fx:id="settingsButton" minWidth="200" mnemonicParsing="false" onAction="#handleSettingsButton"
                    prefHeight="14.0" prefWidth="100.0" text="Settings"/>
        </VBox>
        <Button fx:id="exitButton" minWidth="200" mnemonicParsing="false" onAction="#handleExitButton" prefWidth="100.0"
                text="Exit">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Button>
    </VBox>
</AnchorPane>
